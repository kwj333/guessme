import random


def tryAgain(number):
    guess = input("-")
    try:
        guess = int(guess)
        checkNum(guess, number)
    except:
        print("that's not a number!")
        tryAgain(number)

def correct():
    print("You're Correct!\n")
    playAgain()

def playAgain():
    again = input("Play Again? y/n    ")
    if (again == "y"):
        start()
    elif (again == "n"):
        print("awww okay :(")
    else:
        print("Invalid Response")
        playAgain()
        
def tooHigh(number):
    print("Too high!\n")
    tryAgain(number)
    
def tooLow(number):
    print("Too low!\n")
    tryAgain(number)
    
def checkNum(guess, number):
    if (guess == number):
        correct()
    elif (guess > number):
        tooHigh(number)
    else:
        tooLow(number)

def start():
    number = (random.randint(0,100))
    guess = input("Try to guess the number I'm thinking of! ")
    try:
        guess = int(guess)
    except:
        print("that's not a number!")
        start()
        
    checkNum(guess, number)


start()
